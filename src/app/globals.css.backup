body {
  margin: 0;
  padding: 0;
  font-family: var(--font-body);
  font-size: var(--font-md);
  line-height: var(--leading-normal);
  color: var(--color-text);
  background-color: var(--color-bg);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Typography - Modern BJP Theme */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-heading);
  font-weight: 600;
  line-height: var(--leading-tight);
  margin: 0;
  color: var(--color-text);
  letter-spacing: 0.025em; /* Slight tracking for modern look */
}

h1 {
  font-size: var(--font-4xl);
  font-weight: 700;
  letter-spacing: 0.05em; /* Uppercase feel */
  text-transform: uppercase;
}

h2 {
  font-size: var(--font-3xl);
  font-weight: 600;
  letter-spacing: 0.025em;
}

h3 {
  font-size: var(--font-2xl);
  font-weight: 600;
  letter-spacing: 0.025em;
}

h4 {
  font-size: var(--font-xl);
  font-weight: 500;
}

h5 {
  font-size: var(--font-lg);
  font-weight: 500;
}

h6 {
  font-size: var(--font-md);
  font-weight: 500;
}

p {
  margin: 0 0 var(--space-4) 0;
  line-height: var(--leading-relaxed);
}

p:last-child {
  margin-bottom: 0;
}

/* Links - Modern BJP Theme */
a {
  color: var(--color-primary);
  text-decoration: none;
  transition: all var(--transition-normal);
}

a:hover {
  color: var(--color-primary-dark);
}

a:focus {
  outline: 2px solid var(--color-primary);
  outline-offset: 2px;
}

/* Buttons - Modern BJP Theme */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-3) var(--space-6);
  font-family: var(--font-heading);
  font-size: var(--font-sm);
  font-weight: 500;
  letter-spacing: var(--tracking-wide);
  text-transform: uppercase;
  border: none;
  border-radius: var(--radius-full);
  cursor: pointer;
  transition: all var(--transition-normal);
  text-decoration: none;
}

.btn-primary {
  background: var(--gradient-saffron-orange);
  color: var(--color-text-inverse);
  box-shadow: var(--shadow-md);
}

.btn-primary:hover {
  background: linear-gradient(90deg, #FF8C00 0%, #E55D00 100%);
  box-shadow: var(--shadow-lg);
  transform: translateY(-2px);
}

.btn-secondary {
  background-color: var(--color-secondary);
  color: var(--color-text-inverse);
}

.btn-secondary:hover {
  background-color: var(--color-secondary-dark);
  transform: translateY(-2px);
}

/* Form elements - Modern BJP Theme */
input, textarea, select {
  font-family: var(--font-body);
  font-size: var(--font-md);
  padding: var(--space-3);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  background-color: var(--color-bg);
  color: var(--color-text);
  transition: all var(--transition-normal);
}

input:focus, textarea:focus, select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(255, 111, 0, 0.1);
}

/* Utility classes - Modern BJP Theme */
.text-accent {
  font-family: var(--font-accent);
  font-style: italic;
}

.container {
  max-width: var(--wrap);
  margin: 0 auto;
  padding-left: var(--gutter);
  padding-right: var(--gutter);
}

.section {
  padding: var(--rhythm-vertical) 0;
}

.section-sm {
  padding: var(--space-12) 0;
}

.section-lg {
  padding: var(--space-20) 0;
}

/* Responsive utilities - Modern BJP Theme */
@media (max-width: 768px) {
  .container {
    padding-left: var(--space-4);
    padding-right: var(--space-4);
  }

  .section {
    padding: var(--rhythm-mobile) 0;
  }

  .section-lg {
    padding: var(--rhythm-mobile) 0;
  }
}
