@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,400&family=Nunito+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,400&display=swap');
@import "tailwindcss";

/* Import design tokens */
@import '../../styles/tokens.css';

/* Base styles */
* {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  font-size: 16px;
}

/* ================================================
   COMPREHENSIVE TEXT VISIBILITY & LAYERING FIXES
   ================================================ */

/* 1. TEXT LAYER RESTORATION - High Priority Global Rules */
* {
  position: relative;
  z-index: 10;
}

/* Backgrounds and overlays should be behind text */
.background, .overlay, img, div[style*="background"], .absolute.inset-0 {
  z-index: 1 !important;
}

/* 2. VISIBILITY & OPACITY FIX - Force full visibility */
* {
  opacity: 1 !important;
  visibility: visible !important;
  mix-blend-mode: normal !important;
  background-blend-mode: normal !important;
  filter: none !important;
  backdrop-filter: none !important;
}

/* 3. COLOR LOGIC FOR BJP THEME - Smart contrast detection */
body, p, span, a, h1, h2, h3, h4, h5, h6 {
  color: #111111 !important;
}

/* White text on saffron/orange backgrounds */
[style*="background-color:#FF6F00"],
[style*="background-color:#ff6f00"],
.saffron-bg,
.bg-accent-saffron,
.bg-gradient-saffron-orange,
.bg-gradient-saffron-white,
.bg-\[#FF6F00\],
.bg-\[#ff6f00\],
.saffron-section {
  color: #FFFFFF !important;
}

/* Dark text on light backgrounds */
.bg-white,
.bg-bg-muted,
.bg-bg-warm,
.bg-bg-cool,
.white-section {
  color: #111111 !important;
}

/* 4. FONT INHERITANCE FIX - Consistent typography */
* {
  font-family: 'Poppins', 'Nunito Sans', sans-serif !important;
  font-weight: 500 !important;
}

/* 5. TEXT CONTENT SPECIFIC FIXES */
h1, h2, h3, h4, h5, h6, p, span, a, button, label, input, textarea, select {
  position: relative;
  z-index: 20 !important;
  color: inherit !important;
}

/* 6. CONTAINER Z-INDEX MANAGEMENT */
.container, .grid, .flex, .space-y-*, .section {
  position: relative;
  z-index: 1 !important;
}

/* 7. OVERRIDE PROBLEMATIC CSS PROPERTIES */
.text-\[ {
  color: #111111 !important;
}

.text-gray-600, .text-gray-700, .text-gray-800, .text-gray-900 {
  color: #111111 !important;
}

.group:hover .opacity-100 {
  opacity: 1 !important;
}

/* 8. ENSURE ALL INTERACTIVE ELEMENTS ARE VISIBLE */
button, a, input, textarea, select {
  color: inherit !important;
  opacity: 1 !important;
  visibility: visible !important;
}

/* 9. FIX ANY REMAINING TRANSPARENCY ISSUES */
*::before, *::after {
  opacity: 1 !important;
  mix-blend-mode: normal !important;
}

/* 10. ADDITIONAL SPECIFIC FIXES FOR KNOWN ISSUES */

/* Fix any remaining text visibility issues in overlays */
.group:hover .absolute.inset-0 {
  z-index: 5 !important;
}

/* Ensure text in cards is always visible */
.group .p-8, .group .space-y-4 {
  z-index: 30 !important;
}

/* Fix image overlays */
.aspect-\[16\/10\] .absolute.inset-0 {
  z-index: 2 !important;
}

/* Ensure navigation text is always visible */
nav a, nav span, nav button {
  z-index: 50 !important;
}

/* Fix any remaining transparency issues */
* {
  color: currentColor !important;
}

